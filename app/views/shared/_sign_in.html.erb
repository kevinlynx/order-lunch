<div class="login_form">
<h3 class="window-title"><%= t "title.sign_in" %></h3>
<div class="formbody">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= content_tag :div, flash[:alert], :class => "alert" if flash[:alert] %>
  <div>
    <%= f.label :email, t(:email) %><br />
    <%= f.email_field :email, :class => 'txt-ctrl' %>
  </div>
  <div>
    <%= f.label :password, t(:password) %><br/>
    <%= f.password_field :password, :class => 'txt-ctrl' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, t(:remember_me) %></div>
  <% end -%>

  <div>
    <%= f.submit t("title.sign_in"), :class => 'link-btn' %>
    <%= link_to t(:forgot_your_password), new_password_path(resource_name), :class => "quiet" %>&nbsp;
    <%= link_to t("title.sign_up"), new_registration_path(resource_name) %>
  </div>
<% end %>
</div>
</div>
