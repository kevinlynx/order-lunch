<%= form_for(:user, :url => user_money_path(@user)) do |f| %>
    <div>
      <%= label_tag t(:user_name) %>
      <%= text_field_tag :name, @user.name, :disabled => true %>
    </div>
    <div>
      <%= label_tag t(:money_remain) %>
      <%= text_field_tag :money, as_money(@user.money), :disabled => true %>
    </div>
    <div>
      <%= label_tag t(:money) %>
      <%= text_field_tag :add_money, '', :class => 'txt-ctrl', :size => "10" %>
    </div>
    <div>
      <%= link_to_submit t(:add_money), :class => 'link-btn-small' %>
      <%= link_to t(:close), '#', :class => 'link-btn-small', 
          :onclick => "hide_popup('#addmoney'); return false" %>
    </div>
<% end %>
