<h3 class='window-title'><%= t :order_status %></h3>
<div class='formbody'>
  <table class='stat'>
    <thead>
    <tr>
      <th width="300"><b><%= t :food_name %></b></th>
      <th width="100"><b><%= t :food_count %></b></th>
    </tr>
    </thead>
    <tbody>
    <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.order_count %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
  <hr>
  <span><b><%= t :total_price %></b><%= Order.total_price %></span>
</div>
