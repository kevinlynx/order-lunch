<div id="quickadd" style="display:none;">
  <%= form_for(:food, :url => foods_path) do |f| %>
    <div id="error_tip"></div>
    <div>
      <%= f.text_field :name, :id => 'food_name', :class => 'txt-ctrl', :size => "15" %>
    </div>
    <div>
      <%= f.text_field :price, :class => 'txt-ctrl', :size => "5" %>
    </div>
    <div>
      <%= link_to 'Add', '#', :class => 'link-btn-small', 
          :onclick => "check_submit(); return false;" %>
    </div>
  <% end %>
</div>
