<div id="menu">
  <table class="stat">
    <thead>
    <tr>
      <th width="21">
          <%= check_box_tag "checkall", "checkall", false, :onclick => "markAll(this)" %>
      </th>
      <th width="300"><b><%= t :food_name %></b></th>
      <th width="50"><b><%= t :food_price %></b></th>
    </tr>
    </thead>
    <tbody>
    <% if @foods.count.zero? %>
      <tr>
        <td></td>
        <td style="text-align: center;"><%= t 'tip.no_foods_yet' %></td>
      </tr>
    <% end %>
    <% @foods.each do |food| %>
    <tr>
      <td>
        <%= check_box_tag 'food_ids[]', food.id %>
      </td>
      <td id="food<%= food.id %>"><%= food.name %></td>
      <td><%= food.price %></td>
      <%= render 'foods/item_link', :food => food %>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
