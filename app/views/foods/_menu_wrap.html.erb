<h3 class='window-title'>Today Menu</h3>
<div id="menu-wrap" class='formbody'>
  <% if current_user.admin? %>
    <%= form_tag(foods_path, :method => 'delete') do %>
      <%= render 'foods/menu' %>
     <div>
       <%= link_to 'delete', '#', :class => 'link-btn-small', 
           :onclick => "deleteFoods(this); return false" %>
       <%= link_to "new", "#", :class => "link-btn-small", :id => "add-food-link", 
           :onclick => "switch_quickadd('#add-food-link'); return false;" %>
     </div>
    <% end %>
    <%= render 'foods/quickadd' %>
    <div id="quickedit" class="popup"></div>
  <% else %>
    <%= form_tag(orders_path, :method => 'post') do %>
      <%= render 'foods/menu' %>
      <div>
        <%= link_to_submit 'order', :class => 'link-btn-small' %>
      </div>
    <% end %>
  <% end %>
</div>

