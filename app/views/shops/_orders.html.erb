<table class='stat'>
  <thead>
    <tr>
      <th width="100"><b><%= t :shop_name %></b></th>
      <th width="200"><b><%= t :food_name %></b></th>
      <th width="100"><b><%= t :food_count %></b></th>
    </tr>
    </thead>
    <tbody>
      <% show_name = true %>
      <% shop.sort_foods.each do |food| %>
        <tr>
          <td><%= shop.name if show_name %></td>
          <td id="food<%= food.id %>">
            <%= link_to food.name, foods_order_users_path(food), :remote => true,
                :title => t(:food_order_tip) %>
            <%= render 'foods/order_users', :food => food %>
          </td>
          <td><%= food.order_count %></td>
        </tr>
        <% show_name = false %>
      <% end %>
  </tbody>
</table>
<% count, price = shop.order_info %>
<div> 
  <span><b><%= t :total_price %></b><%= price %></span>&nbsp;&nbsp;
  <span><b><%= t :total_count %></b><%= count%></span>
</div>
<hr/>
